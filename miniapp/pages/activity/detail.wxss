.circle {
  width:54.8rpx; 
  height: 54.8rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
  border: 2.8rpx solid white;
  position: relative;
  flex-shrink: 0;
}

.circle.solid {
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.circle.dashed {
  background-color: #f0f0f0;
  border: 2.8rpx dashed #d0d0d0;
  color: #d0d0d0;
}

/* 半蓝半绿的圆圈 */
.circle.split {
  background-color: transparent;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.circle-split {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  border-radius: 50%;
}

.circle-half {
  position: absolute;
  width: 50%;
  height: 100%;
  top: 0;
}

.circle-half.circle-left {
  left: 0;
  border-radius: 50% 0 0 50%;
}

.circle-half.circle-right {
  right: 0;
  border-radius: 0 50% 50% 0;
}

.circle-split-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
  font-weight: bold;
  color: white;
  z-index: 10;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.3);
}

