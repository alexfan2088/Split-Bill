/* pages/activity/detail.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.activity-header {
  margin-bottom: 12rpx;
}

.activity-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.activity-title {
  font-size: 48rpx; /* 从36rpx增加到48rpx（大两号） */
  font-weight: bold;
  color: #333;
  flex: 1;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.prepaid-tag {
  font-size: 36rpx;
  font-weight: bold;
  color: #007bff;
}

.activity-creator {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  gap: 20rpx; /* 创建者和保管者之间的间距 */
}

.creator-name {
  color: #007bff; /* 创建者名称用蓝色 */
  font-weight: 500;
}

.keeper-info {
  color: #666;
}

.keeper-name {
  color: #007bff; /* 保管者名称用蓝色 */
  font-weight: 500;
}

.activity-meta {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.summary-info {
  margin-top: 0;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.summary-info-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.5;
}

.summary-info-item:last-child {
  margin-bottom: 0;
}

.summary-label {
  color: #666;
}

.summary-value {
  color: #333;
  font-weight: 500;
}

.summary-value.amount {
  color: #137333;
  font-weight: bold;
}

.btn-edit-activity {
  background-color: #007bff;
  color: white;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.btn-edit-activity.disabled {
  background-color: #e0e0e0;
  color: #999;
  opacity: 0.6;
}

.tabs {
  display: flex;
  background-color: white;
  border-bottom: 2rpx solid #e0e0e0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 4rpx solid transparent;
}

.tab.active {
  color: #007bff;
  border-bottom-color: #007bff;
  font-weight: bold;
}

.tab-content {
  padding: 20rpx;
}

.bill-list {
  margin-bottom: 20rpx;
}

.empty-tip {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}

.bill-item {
  background-color: white;
  border-radius: 8rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.bill-left {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.bill-circles {
  display: flex;
  align-items: center;
  width: 106rpx;
  justify-content: flex-start;
}

.circle {
  width: 44.8rpx;
  height: 44.8rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
  border: 2.8rpx solid white;
  position: relative;
  flex-shrink: 0;
}

.circle.solid {
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.circle.dashed {
  background-color: #f0f0f0;
  border: 2.8rpx dashed #d0d0d0;
  color: #d0d0d0;
}

.bill-weight {
  width: 60rpx;
  font-size: 22rpx;
  color: #666;
  font-weight: 500;
  margin-left: 16rpx;
}

.bill-info {
  flex: 1;
  margin-left: -22rpx;
}

.bill-title {
  font-size: 25rpx;
  color: #333;
  line-height: 1.3;
  margin-bottom: 4rpx;
}

.bill-date {
  font-size: 21rpx;
  color: #999;
  line-height: 1.3;
}

.bill-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.bill-amount {
  font-size: 22rpx;
  font-weight: bold;
  color: #137333;
}

.btn-delete {
  background-color: #dc3545;
  color: white;
  font-size: 24rpx;
}

.btn-add {
  width: 100%;
  background-color: #007bff;
  color: white;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

.summary-content {
  background-color: white;
  border-radius: 8rpx;
  padding: 30rpx;
}

.summary-header {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.summary-total {
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.amount {
  color: #137333;
  font-weight: bold;
}

.summary-meta {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.summary-avg {
  font-size: 24rpx;
  color: #666;
}

.member-list {
  margin-bottom: 30rpx;
}

.member-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.member-detail {
  font-size: 24rpx;
  color: #666;
}

.member-balance {
  font-size: 26rpx;
  font-weight: bold;
}

.member-balance.positive {
  color: #137333;
}

.member-balance.negative {
  color: #c5221f;
}

.suggestion-card {
  background-color: #f0f7ff;
  border-left: 8rpx solid #007bff;
  padding: 24rpx;
  border-radius: 8rpx;
  margin-top: 30rpx;
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.suggestion-content {
  font-size: 24rpx;
  color: #666;
}

.suggestion-name {
  color: #007bff;
  font-weight: bold;
}

/* 打平伙相关样式 */
.recharge-content {
  background-color: white;
  border-radius: 8rpx;
  padding: 30rpx;
}

.recharge-summary {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.recharge-summary-item {
  font-size: 28rpx;
  color: #333;
}

.recharge-label {
  color: #666;
}

.recharge-value {
  color: #333;
  font-weight: 500;
}

.recharge-value.amount {
  color: #137333;
  font-weight: bold;
}

.recharge-list {
  margin-bottom: 20rpx;
}

.recharge-header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #e0e0e0;
  background-color: #f9f9f9;
  font-weight: bold;
  font-size: 26rpx;
  color: #333;
}

.recharge-header-item {
  flex: 1;
  text-align: center;
}

.recharge-header-item:first-child {
  text-align: left;
  padding-left: 0;
}

.recharge-header-item:last-child {
  flex: 0 0 100rpx;
  text-align: center;
}

.recharge-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.recharge-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.recharge-date {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  text-align: left;
}

.recharge-payer {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

.recharge-amount {
  flex: 1;
  font-size: 26rpx;
  font-weight: bold;
  color: #137333;
  text-align: center;
  margin-right: 0;
}

.recharge-recorder {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

.recharge-item .btn-delete {
  flex: 0 0 100rpx;
  background-color: #dc3545;
  color: white;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  margin-left: 10rpx;
}

.recharge-item .btn-delete.disabled {
  background-color: #e0e0e0;
  color: #999;
  opacity: 0.6;
}

.prepaid-summary {
  background-color: #f0f7ff;
  border-left: 8rpx solid #007bff;
  padding: 24rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.prepaid-item {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.prepaid-item:last-child {
  margin-bottom: 0;
}

.prepaid-label {
  color: #666;
}

.prepaid-value {
  color: #333;
  font-weight: 500;
}

.prepaid-value.amount {
  color: #137333;
  font-weight: bold;
}

.prepaid-value.positive {
  color: #137333;
}

.prepaid-value.negative {
  color: #c5221f;
  font-weight: bold;
}

.recharge-alert {
  margin-top: 16rpx;
  padding: 16rpx;
  background-color: #fff3cd;
  border: 2rpx solid #ffc107;
  border-radius: 8rpx;
}

.alert-text {
  font-size: 26rpx;
  color: #856404;
  font-weight: 500;
}


