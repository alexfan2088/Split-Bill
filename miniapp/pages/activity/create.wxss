/* pages/activity/create.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form {
  background-color: white;
  border-radius: 8rpx;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.label-highlight {
  color: #dc3545; /* 红色 */
  font-weight: bold;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.5; /* 设置行高，使文字更紧凑 */
  box-sizing: border-box; /* 包含padding和border */
}

/* 成员输入框：保持原来的高度 */
.textarea-members {
  height: 400rpx; /* 原来的高度 */
  min-height: 400rpx;
}

/* 备注框：较小的高度 */
.textarea:not(.textarea-members) {
  height: 100rpx; /* 固定高度，两行 */
  min-height: 100rpx; /* 最小高度 */
}

.input:focus,
.textarea:focus {
  border-color: #007bff;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.type-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.type-tag {
  padding: 12rpx 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f9f9f9;
  cursor: pointer;
  transition: all 0.3s;
}

.type-tag.active {
  border-color: #007bff;
  background-color: #e7f3ff;
  color: #007bff;
  font-weight: 500;
}

.switch-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.switch-label {
  font-size: 28rpx;
  color: #333;
}

.switch-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.keeper-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.keeper-tag {
  padding: 16rpx 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f9f9f9;
  transition: all 0.3s;
}

.keeper-tag.active {
  border-color: #007bff;
  background-color: #e7f3ff;
  color: #007bff;
  font-weight: 500;
}


