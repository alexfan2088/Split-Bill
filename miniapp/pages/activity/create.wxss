/* pages/activity/create.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form {
  background-color: white;
  border-radius: 8rpx;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.label-highlight {
  color: #dc3545; /* 红色 */
  font-weight: bold;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.5; /* 设置行高，使文字更紧凑 */
  box-sizing: border-box; /* 包含padding和border */
}

/* 成员输入框：6行高度，超过自动滚动 */
.textarea-members {
  height: 240rpx; /* 6行高度（每行约40rpx） */
  min-height: 240rpx;
  max-height: 240rpx; /* 固定高度，超过时滚动 */
  overflow-y: auto; /* 超过高度时显示滚动条 */
}

/* 备注框：自动高度，不限制 */
.textarea-remark {
  min-height: 200rpx; /* 最小高度 */
  height: auto; /* 自动高度 */
}

/* 备注显示区域（格式化显示） */
.remark-display {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #f9f9f9;
  min-height: 200rpx;
  position: relative;
  box-sizing: border-box;
}

.remark-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  white-space: pre-wrap; /* 保留换行 */
  word-wrap: break-word;
}

.remark-highlight {
  color: #007bff;
  font-weight: bold;
}

.remark-edit-hint {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.input:focus,
.textarea:focus {
  border-color: #007bff;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.type-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.type-tag {
  padding: 12rpx 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f9f9f9;
  cursor: pointer;
  transition: all 0.3s;
}

.type-tag.active {
  border-color: #007bff;
  background-color: #e7f3ff;
  color: #007bff;
  font-weight: 500;
}

.switch-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.switch-label {
  font-size: 28rpx;
  color: #333;
}

.switch-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.keeper-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.keeper-tag {
  padding: 16rpx 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f9f9f9;
  transition: all 0.3s;
}

.keeper-tag.active {
  border-color: #007bff;
  background-color: #e7f3ff;
  color: #007bff;
  font-weight: 500;
}


