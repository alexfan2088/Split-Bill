/* pages/login/login.wxss */
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.login-card {
  width: 90%;
  max-width: 500rpx;
  background-color: white;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  color: #28a745;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  text-align: center;
  color: #666;
  margin-bottom: 60rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.input:focus {
  border-color: #007bff;
}

.password-wrapper {
  position: relative;
  width: 100%;
}

.toggle-password {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #007bff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  z-index: 10;
}

.status-text {
  display: block;
  font-size: 24rpx;
  margin-top: 12rpx;
  text-align: center;
}

.status-text.blue {
  color: #007bff;
  font-weight: bold;
}

.status-text.green {
  color: #28a745;
  font-weight: bold;
}

.status-text.red {
  color: #dc3545;
  font-weight: bold;
}

.status-text.orange {
  color: #ff9800;
  font-weight: bold;
}

.link-text {
  color: #007bff;
  font-size: 26rpx;
  text-decoration: underline;
  cursor: pointer;
}


