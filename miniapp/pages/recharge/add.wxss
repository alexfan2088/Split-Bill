/* pages/recharge/add.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form {
  background-color: white;
  border-radius: 8rpx;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.payer-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.payer-tag {
  padding: 16rpx 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f9f9f9;
  transition: all 0.3s;
}

.payer-tag.active {
  border-color: #007bff;
  background-color: #e7f3ff;
  color: #007bff;
  font-weight: 500;
}

.keeper-display {
  padding: 20rpx;
  background-color: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.keeper-name {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.btn {
  width: 100%;
  height: 80rpx;
  background-color: #007bff;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-full {
  margin-top: 20rpx;
}

